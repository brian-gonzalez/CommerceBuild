{
  "name": "commerce-build",
  "description": "Build tools for Salesforce Storefront Reference Architecture",
  "keywords": [
    "build",
    "compile",
    "demandware",
    "e-commerce",
    "js",
    "scss",
    "sfcc",
    "sfra",
    "storefront",
    "tool",
    "webpack"
  ],
  "contributors": [
    {
      "name": "Santana James",
      "email": "santana.james@gmail.com",
      "url": "https://github.com/santanajames"
    },
    {
      "name": "Brian Gonzalez",
      "email": "brian.gonzalezp@gmail.com",
      "url": "https://github.com/brian-gonzalez"
    }
  ],
  "version": "3.0.0",
  "engines": {
    "node": ">=16.0.0"
  },
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/brian-gonzalez/commerce-build"
  },
  "dependencies": {
    "@babel/core": "^7.15.5",
    "@babel/eslint-parser": "^7.15.7",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.15.6",
    "autoprefixer": "^10.3.6",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.2.2",
    "css-loader": "^5.2.7",
    "cssnano": "^4.1.11",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-webpack-plugin": "^2.5.4",
    "glob": "^7.1.7",
    "husky": "^7.0.2",
    "isml-linter": "^5.39.2",
    "lint-staged": "^11.1.2",
    "mini-css-extract-plugin": "^1.6.2",
    "minimist": "^1.2.5",
    "node-sass": "^6.0.1",
    "postcss": "^8.3.8",
    "postcss-css-variables": "^0.18.0",
    "postcss-loader": "^4.3.0",
    "revolver-webpack-plugin": "^1.0.4",
    "sass-loader": "^10.2.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-scss": "^3.21.0",
    "stylelint-webpack-plugin": "^2.2.2",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12",
    "webpack-fix-style-only-entries": "^0.6.1",
    "webpack-merge": "^4.2.2"
  },
  "devDependencies": {
    "bootstrap": "4.6.0",
    "cleave.js": "^1.6.0",
    "eslint-plugin-sitegenesis": "^1.0.0",
    "flag-icon-css": "^2.9.0",
    "font-awesome": "^4.7.0",
    "jquery": "^3.6.0"
  },
  "scripts": {
    "build:isml": "isml-linter --build",
    "build:js": "webpack --js",
    "build:scss": "webpack --css",
    "build": "concurrently -n \"JS,SCSS,ISML\" -c \"#f0db4f.bold,#cd6799.bold,#f06529.bold\" \"npm:build:js\" \"npm:build:scss\" \"npm:build:isml\"",
    "bundle-report": "webpack --json > stats.json && webpack-bundle-analyzer stats.json",
    "fix:isml": "npm run lint:isml -- --autofix",
    "fix:js": "npm run lint:js -- --fix",
    "fix:scss": "npm run lint:scss -- --fix",
    "fix": "concurrently -n \"JS,SCSS,ISML\" -c \"#f0db4f.bold,#cd6799.bold,#f06529.bold\" \"npm:fix:js\" \"npm:fix:scss\" \"npm:fix:isml\"",
    "lint:isml": "isml-linter",
    "lint:js": "eslint cartridges/**/cartridge/client/**/js --no-error-on-unmatched-pattern",
    "lint:scss": "stylelint \"cartridges/**/cartridge/client/**/*.scss\"",
    "lint": "concurrently -n \"JS,SCSS,ISML\" -c \"#f0db4f.bold,#cd6799.bold,#f06529.bold\" \"npm:lint:js\" \"npm:lint:scss\" \"npm:lint:isml\"",
    "watch:scss": "npm run build:scss -- --watch",
    "watch:isml": "echo \"ISML\"",
    "watch:js": "npm run build:js -- --watch",
    "watch": "concurrently -n \"JS,SCSS,ISML\" -c \"#f0db4f.bold,#cd6799.bold,#f06529.bold\" \"npm:watch:js\" \"npm:watch:scss\" \"npm:watch:isml\"",
    "prepare": "husky install"
  },
  "config": {
    "rootFiles": true,
    "revolverPath": "app_custom_theme::theme, app_storefront_base::base",
    "js": {
      "inputPath": "cartridges/{cartridge}/cartridge/client/default/js"
    },
    "styles": {
      "keepOriginalLocation": true,
      "inputPath": "cartridges/{cartridge}/cartridge/client/**/*.scss",
      "includePaths": "node_modules/flag-icon-css/sass",
      "aliasDirName": "scss"
    }
  },
  "license": "MIT"
}
