{
  "name": "commerce-build",
  "description": "Build tools for Salesforce Storefront Reference Architecture",
  "keywords": [
    "build",
    "compile",
    "demandware",
    "e-commerce",
    "js",
    "scss",
    "sfcc",
    "sfra",
    "storefront",
    "tool",
    "webpack"
  ],
  "contributors": [
    {
      "name": "Santana James",
      "email": "santana.james@gmail.com",
      "url": "https://github.com/santanajames"
    },
    {
      "name": "Brian Gonzalez",
      "email": "brian.gonzalezp@gmail.com",
      "url": "https://github.com/brian-gonzalez"
    }
  ],
  "version": "3.0.1-10",
  "engines": {
    "node": ">=16.0.0"
  },
  "bin": "bin/cli.js",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/brian-gonzalez/commerce-build"
  },
  "dependencies": {
    "@babel/core": "^7.15.8",
    "@babel/eslint-parser": "^7.15.8",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.15.8",
    "@commitlint/cli": "^13.2.0",
    "app-root-dir": "^1.0.2",
    "autoprefixer": "^10.3.7",
    "babel-loader": "^8.2.2",
    "commander": "^8.2.0",
    "commitlint-config-jira": "^1.5.1",
    "commitlint-plugin-jira-rules": "^1.5.1",
    "concurrently": "^6.3.0",
    "cosmiconfig": "^7.0.1",
    "cross-spawn": "^7.0.3",
    "css-loader": "^5.2.7",
    "cssnano": "^4.1.11",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-webpack-plugin": "^2.5.4",
    "fs-extra": "^10.0.0",
    "glob": "^7.2.0",
    "husky": "^7.0.2",
    "isml-linter": "^5.39.3",
    "lint-staged": "^11.2.0",
    "mini-css-extract-plugin": "^1.6.2",
    "minimist": "^1.2.5",
    "node-sass": "^6.0.1",
    "postcss": "^8.3.9",
    "postcss-css-variables": "^0.18.0",
    "postcss-loader": "^4.3.0",
    "revolver-webpack-plugin": "^1.0.4",
    "sass-loader": "^10.2.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-scss": "^3.21.0",
    "stylelint-webpack-plugin": "^2.2.2",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12",
    "webpack-fix-style-only-entries": "^0.6.1",
    "webpack-merge": "^4.2.2"
  },
  "devDependencies": {
    "bootstrap": "4.6.0",
    "cleave.js": "^1.6.0",
    "eslint-plugin-sitegenesis": "^1.0.0",
    "flag-icon-css": "^2.9.0",
    "font-awesome": "^4.7.0",
    "jquery": "^3.6.0"
  },
  "scripts": {
    "build:isml": "commerce-build build --isml",
    "build:js": "commerce-build build --js",
    "build:scss": "commerce-build build --scss",
    "build": "commerce-build build",
    "fix:isml": "commerce-build fix --isml",
    "fix:js": "commerce-build fix --js",
    "fix:scss": "commerce-build fix --scss",
    "fix": "commerce-build fix",
    "lint:isml": "commerce-build lint --isml",
    "lint:js": "commerce-build lint --js",
    "lint:scss": "commerce-build lint --scss",
    "lint": "commerce-build lint",
    "watch:scss": "commerce-build watch --scss",
    "watch:isml": "commerce-build watch --isml",
    "watch:js": "commerce-build watch --js",
    "watch": "commerce-build watch",
    "prepare": "husky install"
  },
  "config": {
    "rootFiles": true,
    "revolverPath": "app_custom_theme::theme, app_storefront_base::base",
    "buildDisable": "app_storefront_base",
    "js": {
      "inputPath": "cartridges/{cartridge}/cartridge/client/default/js"
    },
    "scss": {
      "keepOriginalLocation": true,
      "inputPath": "cartridges/{cartridge}/cartridge/client/**/*.scss",
      "includePaths": "node_modules/flag-icon-css/sass",
      "aliasDirName": "scss"
    }
  },
  "license": "MIT"
}
