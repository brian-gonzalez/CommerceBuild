{
  "name": "@bgss/CommerceBuild",
  "description": "Build tool for storefronts",
  "keywords": [
    "build",
    "tool",
    "compile",
    "js",
    "scss",
    "webpack",
    "sfcc",
    "demandware",
    "sfra",
    "storefront",
    "magento",
    "e-commerce"
  ],
  "version": "2.1.0",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/brian-gonzalez/CommerceBuild"
  },
  "dependencies": {
    "@babel/core": "^7.15.5",
    "@babel/eslint-parser": "^7.15.7",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.15.6",
    "autoprefixer": "^10.3.4",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.2.7",
    "cssnano": "^4.1.11",
    "dw-utils": "^1.3.137",
    "eslint": "^7.32.0",
    "eslint-webpack-plugin": "^2.5.4",
    "glob": "^7.1.7",
    "mini-css-extract-plugin": "^1.6.2",
    "minimist": "^1.2.5",
    "node-sass": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-css-variables": "^0.18.0",
    "postcss-loader": "^4.3.0",
    "revolver-webpack-plugin": "^1.0.4",
    "sass-loader": "^10.2.0",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12",
    "webpack-fix-style-only-entries": "^0.6.1",
    "webpack-merge": "^4.2.2"
  },
  "devDependencies": {
    "bootstrap": "4.6.0",
    "cleave.js": "^1.6.0",
    "flag-icon-css": "^2.9.0",
    "font-awesome": "^4.7.0",
    "jquery": "^3.6.0"
  },
  "scripts": {
    "dw-init": "dw-utils init",
    "deploy": "npm run build --",
    "postdeploy": "dw-utils clean",
    "build": "npm-run-all --parallel \"build:* -- {@}\" --",
    "build:js": "webpack --progress --js",
    "build:css": "webpack --progress --css",
    "watch": "npm-run-all --parallel \"watch:* -- {@}\" --",
    "watch:dw": "dw-utils watch",
    "watch:js": "npm run build:js -- --watch",
    "watch:css": "npm run build:css -- --watch",
    "bundle-report": "webpack --json > stats.json && webpack-bundle-analyzer stats.json"
  },
  "config": {
    "rootFiles": true,
    "revolverPath": "app_custom_theme::theme, app_storefront_base::base",
    "js": {
      "inputPath": "cartridges/{cartridge}/cartridge/client/default/js"
    },
    "styles": {
      "keepOriginalLocation": true,
      "inputPath": "cartridges/{cartridge}/cartridge/client/**/*.scss",
      "includePaths": "node_modules/flag-icon-css/sass",
      "aliasDirName": "scss"
    }
  }
}