{
  "rootDir": "./cartridges",
  "rules": {
    "contextual-attrs": {},
    "enforce-require": {},
    "enforce-security": { "level": "warn" },
    "leading-iscache": {},
    "leading-iscontent": {},
    "max-depth": {
      "max": 15
    },
    "max-lines": {},
    "no-deprecated-attrs": {},
    "no-embedded-isml": { "level": "warn" },
    "no-git-conflict": {},
    "no-hardcode": {
      "except": [
        "(",
        ")",
        "[",
        "]",
        "\"",
        "\\",
        "/",
        "+",
        "-",
        "*",
        ":",
        ",",
        "."
      ],
      "allowHtmlEntities": false
    },
    "no-import-package": {},
    "no-inline-style": { "level": "warn" },
    "no-iselse-slash": {},
    "no-redundant-context": {},
    "no-require-in-loop": {},
    "no-space-only-lines": {},
    "no-tabs": {},
    "no-trailing-spaces": {}
  }
}
